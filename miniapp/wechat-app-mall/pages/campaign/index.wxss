/**index.wxss**/

.container {
  background-color: #fff;
  min-height: 100%;
  display: block;
}

.banner {
  width: 100%;
  height: 750rpx;
}

.banner-img {
  width: 100%;
  height: 750rpx;
}

.goods-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
}

.goods-box {
  width: 686rpx;
  height: 310rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  display: flex;
}

.goods-box .child-name {
  position: absolute;
  margin-top: 140rpx;
  font-size: 18rpx;
  background-color:#ffb300;
  width:72rpx;
  height:32rpx;
  color: #fff;
  border-radius: 5rpx;
  line-height: 32rpx;
  text-align: center;
}

.goods-box .img-box {
  width: 300rpx;
  height: 300rpx;
  overflow: hidden;
  border-radius: 50%;
  border: #f3e189 solid 1rpx;
}

.goods-box .position-left {
  position: absolute;
}

.goods-box .position-right {
  position: absolute;
  right: 32rpx;
}

.goods-box .image {
  width: 290rpx;
  height: 290rpx;
  margin: 7rpx 0 0 7rpx;
  border-radius: 50%;
}

.goods-box .info-box {
  width: 386rpx;
}

.goods-box .goods-title {
  overflow: hidden;
  font-size: 34rpx;
  color: #333;
  padding-left: 24rpx;
  padding-top: 24rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 90rpx;
  line-height: 48rpx;
}

.goods-box .goods-properties {
  padding-left: 24rpx;
  margin-top: 8rpx;
}

.goods-box .goods-prop {
  background-color: #f7f7f7;
  color: #999;
  padding: 6rpx 24rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.goods-box .goods-teacher-desc {
  padding-left: 24rpx;
  font-size: 24rpx;
  color: #333;
  margin-top: 22rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 35rpx;
  overflow: hidden;
}

.goods-box .goods-footer {
  bottom: -15rpx;
  position: relative;
}

.detail-goods-originalprice {
  font-size: 20rpx;
  color: #999;
  text-decoration: line-through;
  margin: 20rpx 0 -30rpx 25rpx;
}

.goods-box .price-text {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.goods-box .goods-price {
  width: 280rpx;
  overflow: hidden;
  font-size: 36rpx;
  padding: 18rpx 0;
  color: #e64340;
  margin-left: 24rpx;
}

.goods-box .goods-pay {
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 25rpx;
  background-color: #f44;
  color: #fff;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  border-radius: 30rpx;
  padding: 0;
}

