.message-container {
  width: 100%;
}

.message-block {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #f5f5f5;
  margin-left: 32rpx;
}

.message-label-box  .label {
  font-size: 34rpx;
  color: #000;
  width: 200rpx;
}

.message-label-box .label-item-box {
  display: flex;
  margin-left: 10rpx;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 34rpx;
}

.message-label-box .label-item {
  font-size: 26rpx;
  color: #000;
  padding: 14rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin: 0 20rpx 20rpx 0;
}

.label-right {
  position: absolute;
  right: 32rpx;
}

.new-button {
  display: flex;
  justify-content: center;
  margin: 68rpx auto 0;
  color: #f24724;
  border: 1px solid #f24724;
  height: 94rpx;
  line-height: 94rpx;
  width: 686rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 10rpx;
}

.plus-icon {
  color: #fff;
  background-color: #f24724;
  border-radius: 50%;
  width: 35rpx;
  height: 35rpx;
  line-height: 32rpx;
  margin-top: 31rpx;
  font-weight: bold;
  margin-right: 16rpx;
}
