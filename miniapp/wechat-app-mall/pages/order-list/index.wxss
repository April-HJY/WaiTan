.no-order {
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 88rpx;
  left: 0;
  right: 0;
  text-align: center;
  padding-top: 203rpx;
  background-color: #f9f9f9;
}
.bottom-block {
  width: 100%;
  left: 0;
  right: 0;
  text-align: center;
  height: 32rpx;
  background-color: #f9f9f9;
}

.no-order-img {
  width: 81rpx;
  height: 96rpx;
  margin-bottom: 31rpx;
}

.no-order .text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.order-list {
  width: 100%;
}

.order-list .a-order {
  width: 100%;
  background-color: #fff;
  margin-top: 34rpx;
}

.order-list .a-order .order-date {
  padding: 0 30rpx;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #888;
  align-items: center;
}

.order-list .a-order .order-date .red {
  font-size: 28rpx;
  color: #f24724;
}


.a-order  .goods-info, .goods-img-container {
  width: 718rpx;
  margin-left: 32rpx;
  border-top: 2rpx solid #eee;
  border-bottom: 2rpx solid #eee;
  padding: 32rpx 0;
  display: flex;
  align-items: center;
}

.goods-info .img-box {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 30rpx;
  background-color: #f7f7f7;
}

.goods-info .img-box .goods-img, .goods-img-container .img-box .goods-img {
  width: 160rpx;
  height: 160rpx;
}

.goods-info  .goods-des {
  width: 100%;
  height: 78rpx;
  line-height: 39rpx;
  font-size: 26rpx;
  color: #000;
  overflow: hidden;
}

.goods-img-container {
  height: 224rpx;
  box-sizing: border-box;
  white-space: nowrap;
  display:flex;
}

.goods-img-container .img-box {
  width: 160rpx;
  height: 160rpx;
  background-color: #f7f7f7;
}

.order-list .a-order .price-box {
  position: relative;
  width: 720rpx;
  height: 100rpx;
  margin-left: 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
}

.order-list .a-order .price-box .price-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
}
.order-list .a-order .price-box .total-price {
  font-size: 28rpx;
  color: #F24724;
  display: inline-block;
  position: absolute;
  right: 32rpx;
  font-weight: bold;
}
.order-list .a-order .price-box2 {
  position: relative;
  width: 720rpx;
  height: 90rpx;
  margin-left: 30rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  margin-top:-8rpx;
}
.a-order .price-box2 .btn {
  width: 166rpx;
  height: 60rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 55rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.a-order .price-box2 .cancel-btn {
  border: 1rpx solid #eee;
  background-color:#eee;
  color:#999;
  position: absolute;
  right: 216rpx;
}

.a-order .price-box2 .topay-btn {
  border: 1px solid #F24724;
  color: #fff;
  background-color:#F24724;
  float:right;
  margin-right: 32rpx;
}

.order_prepayid {
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-img-container .info-box{
  width:526rpx;
  overflow: hidden;
}
.goods-img-container .goods-title{
  width:502rpx;
  font-size: 34rpx;
  color:#333;
  padding-left: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  height: 90rpx;
  line-height: 48rpx;
  white-space: pre-wrap;
}
.goods-img-container .goods-properties{
  padding-left:24rpx;
  margin-top:8rpx;
}
.goods-img-container .goods-prop{
  background-color: #f7f7f7;
  color:#999;
  padding:6rpx 24rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  height: 40rpx;
  margin-right:10rpx;
}
.goods-img-container .goods-teacher-desc{
  padding-left:24rpx;
  font-size:24rpx;
  color:#333;
  margin-top:22rpx;
}
.goods-img-container .goods-footer{
  display: flex;
  position: relative;
  margin-top:24rpx;
}
.goods-img-container .goods-price{
  width: 480rpx;
  overflow: hidden;
  font-size: 32rpx;
  color:#333;
  margin-left: 24rpx;
}
.goods-img-container .goods-quantity{
  overflow: hidden;
  font-size: 28rpx;
  color:#999;
  margin-left: 24rpx;
}
