.canvas {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2000;
  width: 330px;
  height: 550px;
  background-color: #fff;
}

.poster-container {
  align-items: center;
  text-align: center;
  margin-bottom: 100rpx;
}

.poster {
  height: 1200rpx;
  width: 750rpx;
}

.button-container {
  display: flex;
  background-color: #fff;
  position: fixed;
  bottom: 0px;
  right: 0px;
  left: 0px;
  border: 0 solid #fff;
  border-radius: 500px;
  /*box-shadow: 4px 1px 1px #cccccc;*/
}

.rule-button {
  display: flex;
  background-color: #5177ff;
  position: fixed;
  top: 60rpx;
  right: 0px;
  width: 160rpx;
  height: 62rpx;
  line-height: 62rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  align-items: center;
}

.rule-button .button-name {
  margin-left: 30rpx;
}

.button {
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  background-color: #e64340;
  color: #fff;
  font-size: 34rpx;
}

.share {
  width: 300rpx;
}

.save-pic {
  width: 750rpx;
}

.show-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 4;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}

.popup-contents {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  z-index: 6;
  padding-bottom: 30rpx;
}

.rule-title {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
  margin-top: 20rpx;
}

.popup-close {
  position: relative;
  top: 35rpx;
  left: 675rpx;
  width: 40rpx;
  height: 40rpx;
}

.rule-content {
  margin: 0 32rpx;
  display: flex;
  font-size: 30rpx;
  color: #333;
  line-height: 64rpx;
}

.li {
  color: #999;
  background-color: #eee;
  font-size: 20rpx;
  height: 32rpx;
  width: 32rpx;
  border-radius: 50%;
  line-height: 32rpx;
  text-align: center;
  margin-top: 18rpx;
  margin-right: 20rpx;
}

.rule-text {
  width: 650rpx;
}

.setting-button {
  background-color: #e64340;
  color: #fff;
  text-align: center;
  font-size: 34rpx;
  border: 0;
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0rpx;
}
